<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  按钮正常样式  -->
    <style name="btn_style_normal">
        <item name="android:background">@drawable/btn_style_bg</item>
        <item name="android:textColor">@drawable/btn_style_text_color</item>
        <item name="android:textSize">@dimen/text_size_level2</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="btn_file_type_style">
        <item name="android:background">@drawable/share_file_type_s</item>
        <item name="android:textColor">@drawable/share_file_type_text_selected</item>
        <item name="android:textSize">@dimen/text_size_level5</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="TableTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">1px</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="background">@color/admin_table_title_bg</item>
        <item name="android:gravity">center</item>
        <item name="textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="draw_tv_pressed">
        <item name="android:textColor">@drawable/black_white_text_pressed</item>
        <item name="android:background">@drawable/shape_btn_pressed</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="draw_tv_selected">
        <item name="android:textColor">@drawable/black_white_text_selected</item>
        <item name="android:background">@drawable/shape_btn_selected</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>