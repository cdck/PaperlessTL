<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" />
            <size android:width="60dp" android:height="25dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size android:width="60dp" android:height="25dp" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/light_black" />
        </shape>
    </item>
    <!--<item android:state_pressed="true" android:drawable="@drawable/icon_btn_t"/>-->
    <!--<item android:state_pressed="false" android:drawable="@drawable/icon_btn_f"/>-->
</selector>