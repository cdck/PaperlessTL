<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_admin_election" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_election"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/election_content" />

            <EditText
                android:id="@+id/edt_election_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_black"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="@string/election_type" />

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/type_spinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="@string/register" />

            <Spinner
                android:id="@+id/sp_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/confidential_spinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option1_" />

            <EditText
                android:id="@+id/edt_option1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_black"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option2_" />

            <EditText
                android:id="@+id/edt_option2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_black"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option3_" />

            <EditText
                android:id="@+id/edt_option3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_black"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option4_" />

            <EditText
                android:id="@+id/edt_option4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_black"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option5_" />

            <EditText
                android:id="@+id/edt_option5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_black"
                android:lines="1"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                style="@style/btn_pressed_style"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="@string/add" />

            <Button
                android:id="@+id/btn_modify"
                style="@style/btn_pressed_style"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="@string/modify" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/btn_pressed_style"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="@string/delete" />

            <Button
                android:id="@+id/btn_export"
                style="@style/btn_pressed_style"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="@string/export_excel" />

            <Button
                android:id="@+id/btn_import"
                style="@style/btn_pressed_style"
                android:layout_width="wrap_content"
                android:text="@string/import_excel" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>