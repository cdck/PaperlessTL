<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/table_line_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_table3_tv_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginBottom="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:gravity="center"
        android:text="@string/number"
        android:textColor="@color/white" />

    <com.xlk.paperlesstl.ui.MarqueeTextView
        android:id="@+id/item_table3_tv_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:gravity="center"
        android:text="@string/room_name"
        android:textColor="@color/white" />

    <com.xlk.paperlesstl.ui.MarqueeTextView
        android:id="@+id/item_tv_location"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:gravity="center"
        android:text="@string/room_location"
        android:textColor="@color/white" />

    <com.xlk.paperlesstl.ui.MarqueeTextView
        android:id="@+id/item_tv_remarks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:gravity="center"
        android:text="@string/remarks"
        android:textColor="@color/white" />
</LinearLayout>