<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_30"
    android:background="@color/table_line_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_tv_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/number"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/name"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/unit"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/position"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/remarks"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/phone"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/email"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/item_tv_8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1px"
        android:layout_marginBottom="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/sign_in_password"
        android:textColor="@color/white" />
</LinearLayout>