<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@color/table_line_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1px"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/number"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/device_id"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/device_name"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/device_type"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/device_version"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/device_IP"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/device_port"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/guest_mode"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/online_status"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="2"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/interface_status"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/lift_id"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginEnd="1px"
        android:layout_weight="1"
        android:background="@color/admin_table_title_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/mike_id"
        android:textColor="@color/white" />
</LinearLayout>