<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:clickable="false"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/number" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/member" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/name" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/device_state" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/face_state" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/out_open"
                android:textSize="@dimen/text_size_level2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/device_type" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_lift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:checked="true"
                android:text="@string/lift" />

            <CheckBox
                android:id="@+id/cb_mike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:checked="true"
                android:text="@string/mike" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/device_control_right_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_assist_signin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/signin_s" />

        <ImageView
            android:id="@+id/iv_terminal_boot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/terminal_boot_s"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_terminal_shutdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/terminal_shutdown_s"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_terminal_restart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/terminal_restart_s"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_software_restart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/software_restart_s" />

        <ImageView
            android:id="@+id/iv_role_set"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/role_set_s" />

        <ImageView
            android:id="@+id/iv_document"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/document_s" />

        <ImageView
            android:id="@+id/iv_rising"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/rising_s" />

        <ImageView
            android:id="@+id/iv_falling"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/other_menu_bg"
            android:clickable="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/falling_s" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp" />

    </LinearLayout>

</LinearLayout>